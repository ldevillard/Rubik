@inherits LayoutComponentBase
@inject Rubik.Components.Data.Theme Theme

@* Required *@
<MudThemeProvider IsDarkMode="true" Theme="@Theme.CustomTheme" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<div class="page">
    <NavMenu/>
    <main style="padding-top: 64px;">
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .custom-link {
        transition: color 0.1s ease;
        color: #ffffff;
    }

    .custom-link:hover {
        color: #4b395e !important;
        border-radius: 5px;
    }
</style>