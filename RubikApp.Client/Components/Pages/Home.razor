@page "/"
@rendermode InteractiveWebAssembly

<PageTitle>Home</PageTitle>

<MudGrid style="height: 90vh; width: 100%; position: relative;" tabindex="0" @onkeydown="timerTrigger">
    <!-- Timer -->
    <MudItem Class="d-flex align-center justify-center mud-width-full" xs="12">
        <MudContainer MaxWidth="MaxWidth.Small" Class="display: flex;">
            <RubikApp.Client.Components.Counter.Counter @ref="Counter"/>
        </MudContainer>
    </MudItem>

    <!-- Time Stats -->
    <div style="position: absolute; bottom: 20px; right: 50px;">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h4"><b>STATS</b></MudText>
                <br />
                <MudText Typo="Typo.body1">AO5: 20.08</MudText>
                <MudText Typo="Typo.body1">Single: 13.98</MudText>
            </MudCardContent>
        </MudCard>
    </div>
</MudGrid>